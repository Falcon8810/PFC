<h1>トレーニング追加</h1>

<%= form_with model:@training_detail, local:true do |f| %>

<!--if文で分岐、有酸素運動なら時間、距離、メモ、それ以外は以下の通り-->
  <div>
    <%= f.label :"重さ" %>
    <%= f.number_field :weight, autofocus: true %>
  </div>
  <div>
    <%= f.label :"回数" %>
    <%= f.number_field :repetition %>
  </div>
  <div>
    <%= f.label :"メモ" %>
    <%= f.text_field :memo %>
  </div>
  <div>
    <%= f.submit '登録' %>
  </div>

<% end %>