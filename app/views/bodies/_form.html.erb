<%= form_with model:body, local:true do |f| %>

  <div class="form-group col-md-3">
    <%= f.label :日付, class: 'control-label' %>
    <%= f.date_field :record_date, class: 'form-control' %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :weight, "体重" %>
    <%= f.number_field :weight, step: '0.1', min: '20', class: 'form-control' %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :bfp, "体脂肪率" %>
    <%= f.number_field :bfp , step: '0.1', min: '0', class: 'form-control' %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :image, "カラダ写真" %>
    <%= f.attachment_field :image, class: "form-control-file" %>
  </div>
  <div class="form-group col-md-3">
    <%= f.submit '投稿', class: 'btn btn-info' %>
  </div>

<% end %>