<h1>カラダ（体組成）</h1>

<table class="table table-striped table-hover">
	<tr>
		<th>日付</th>
		<th>体重(kg)</th>
		<th>体脂肪率(%)</th>
		<th>カラダ写真</th>
		<th></th>
		<th></th>
	</tr>
  <% @bodies.each do |body| %>
    <tr>
      <td><%= body.record_date.strftime('%Y/%m/%d') %></td>
      <td><%= body.weight %></td>
      <td><%= body.bfp %></td>
      <td><%= attachment_image_tag body, :image, :fill, 100, 100 %></td>
      <% if body.user_id == current_user.id %>
        <td><%= link_to '編集', edit_body_path(body.id), class: 'btn btn-outline-success' %></td>
        <td><%= link_to '削除', body_path(body.id), method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-outline-danger' %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<%= paginate @bodies %>