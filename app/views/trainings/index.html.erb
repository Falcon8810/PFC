<h2>トレーニング内容一覧</h2>
<% @trainings.each do |training| %>
	<div>
		<span>日付</span>
		<%= training.training_date %>
	</div>
	<!--ここからネストされたtraninig_details modelの内容-->
	<% training.training_details.each do |training_detail| %>
	<div>
		<span>種目名</span>
		<%= training_detail.training_name %>
	</div>
	<div>
		<span>部位</span>
		<%= training_detail.body_part_i18n %>d
	</div>
	<div>
		<span>重さ</span>
		<%= training_detail.weight %>
	</div>
	<div>
		<span>回数</span>
		<%= training_detail.repetition %>
	</div>
	<div>
		<span>memo</span>
		<%= training_detail.memo %>
	</div>
	<% end %>
	<%= link_to "編集", edit_training_path(training.id) %>
	<%= link_to "削除", training_path(training.id), method: :delete %>

<% end %>
