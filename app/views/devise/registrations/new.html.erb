<h2><%= t('.sign_up') %></h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"ニックネーム" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"性別" %><br />
    <%= f.radio_button :sex, :true %>
    <%= f.label :sex, "男性", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :sex, :false %>
    <%= f.label :sex, "女性", {value: :false, style: "display: :inline-block;"} %>
  </div>

  <div class="field">
    <%= f.label "生年月日" %><br />
    <%= f.date_select :birthday, use_month_numbers: true, prompt: "--", start_year: (Time.now.year - 10), end_year: 1930 %>
  </div>

  <div class= "field">
    <%= f.label "身長" %>
    <%= f.number_field :height, step: '0.1', min: '100' %>
  </div>

  <div class= "field">
    <%= f.label "体重" %>
    <%= f.number_field :weight, step: '0.1', min: '20' %>
  </div>

  <!--ここに活動レベル入れるべきか-->

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
